@using SchoolFinderWeb.Models
@model School
@{
    ViewData["Title"] = "School";
}

<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area section-padding-80">
    <div class="container">
        <div class="col-12">
            <h2 class="mb-30 school-title">@Model.Name</h2>
        </div>
        <div class="school-container">
            <div class="school-details">
                <p class="school-detail">Адреса: @Model.Address</p>
                <p class="school-detail">Район: @Model.District</p>
                <p class="school-detail">Тип школи: @Model.Type</p>
                <p class="school-detail">Ціна: @Model.Price грн</p>
                <p class="school-detail">Группа продовженного дня: @Model.ExtendedDayGroups</p>

                <p class="article-details">@Model.Description</p>
            </div>
            <div>
                <img src="~/img/core-img/school.png" alt="" width="256px">
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
