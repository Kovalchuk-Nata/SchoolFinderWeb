@model SchoolFinderWeb.ViewModels.SchoolViewModel

@{
    ViewData["Title"] = "Додати школу";
}
<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area section-padding-80 bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2>Додати школу</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/">
                                    <i class="icon_house_alt"></i>
                                    Головна
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/profile">
                                    <i class=""></i>
                                    Профіль
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Додати школу</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->

<form method="post" asp-controller="School" asp-action="Create">
    <div class="border p-3 mt-4">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="District"></label>
            <select asp-for="District" class="form-control">
                <option value="Богунський">Богунський</option>
                <option value="Корольовський">Корольовський</option>
            </select>
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Type"></label>
            <select asp-for="Type" class="form-control">
                <option value="Державна">Державна</option>
                <option value="Приватна">Приватна</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ExtendedDayGroups"></label>
            <input asp-for="ExtendedDayGroups" type="checkbox" />
            <span asp-validation-for="ExtendedDayGroups" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Specialization"></label>
            <input asp-for="Specialization" type="checkbox" />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AdditionalOpportunities"></label>
            <input asp-for="AdditionalOpportunities" type="checkbox" />
            <span asp-validation-for="AdditionalOpportunities" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Classes"></label>
            <select asp-for="Classes" class="form-control">
                <option value="1-4">1-4</option>
                <option value="5-9">5-9</option>
                <option value="10-11">10-11</option>
                <option value="1-11">1-11</option>
            </select>
            <span asp-validation-for="Classes" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Format"></label>
            <select asp-for="Format" class="form-control">
                <option value="Онлайн">Онлайн</option>
                <option value="Офлайн">Офлайн</option>
                <option value="Дистанційне">Дистанційне</option>
                <option value="Змішане">Змішане</option>
            </select>
            <span asp-validation-for="Format" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Shelter"></label>
            <input asp-for="Shelter" type="checkbox" />
            <span asp-validation-for="Shelter" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PaticipationVUO"></label>
            <input asp-for="PaticipationVUO" type="checkbox" />
            <span asp-validation-for="PaticipationVUO" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="btn-centre">
            <button type="submit" class="btn akame-btn" style="width:150px">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }