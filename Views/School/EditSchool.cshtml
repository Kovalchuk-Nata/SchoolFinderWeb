@model SchoolFinderWeb.Models.School

@{
    ViewData["Title"] = "Редагувати школу";
}

<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area section-padding-80 bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2>Редагувати школу</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/">
                                    <i class="icon_house_alt"></i>
                                    Головна
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/profile">
                                    <i class=""></i>
                                    Профіль
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Редагувати школу</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->

<form method="post" asp-controller="School" asp-action="Edit">
    <div class="border p-3 mt-4">

        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="SchoolID" class="form-control" type="hidden" />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="District"></label>
            <select asp-for="District" class="form-control">
                <option value="Богунський">Богунський</option>
                <option value="Корольовський">Корольовський</option>
            </select>
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Type"></label>
            <select asp-for="Type" class="form-control">
                <option value="Державна">Державна</option>
                <option value="Приватна">Приватна</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ExtendedDayGroups"></label>
            <input asp-for="ExtendedDayGroups" type="checkbox" />
            <span asp-validation-for="ExtendedDayGroups" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Specialization"></label>
            <input asp-for="Specialization" type="checkbox" />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AdditionalOpportunities"></label>
            <input asp-for="AdditionalOpportunities" type="checkbox" />
            <span asp-validation-for="AdditionalOpportunities" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input asp-for="UserId" class="form-control" type="hidden" />

        <button type="submit" class="btn akame-btn" style="width:150px">Create</button>
    </div>

</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        }