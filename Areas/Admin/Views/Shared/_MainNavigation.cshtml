@using SF.Areas.Admin.Helpers

  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-area="Admin" asp-controller="Homes" asp-action="Index" class="brand-link">
        <img src="~/img/core-img/school.png" alt="SchoolFinder" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">SchoolFinder</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
     
      <!-- Sidebar Menu -->
      <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="true">
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Schools" asp-action="Index" class="nav-link @(Url.CheckActiveController("Schools") ? "active":"")">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Schools
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="nav-link @(Url.CheckActiveController("Users") ? "active":"")">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Users
                        </p>
                    </a>
                </li>
                 <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Articles" asp-action="Index" class="nav-link @(Url.CheckActiveController("Articles") ? "active":"")">
                          <i class="nav-icon fas fa-th"></i>
                          <p>
                            Articles
                        </p>
                  </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Olimpiad" asp-action="Index" class="nav-link @(Url.CheckActiveController("Olimpiad") ? "active":"")">
