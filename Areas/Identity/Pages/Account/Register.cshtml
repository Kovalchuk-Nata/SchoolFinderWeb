@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Register Form Start -->
<section class="akame-portfolio section-padding-80 clearfix">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="login-form ">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h1>@ViewData["Title"]</h1>
                        <h2>Create a new account.</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating form-group">
                            <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.FirstName"></label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-floating form-group">
                            <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.LastName"></label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="form-floating form-group">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating form-group">
                            <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                            <label asp-for="Input.PhoneNumber"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating form-group">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating form-group">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group">
                            <label asp-for="Input.UserType"></label>
                            <select asp-for="Input.UserType" class="form-control">
                                <option value="Parent">Батьки дитини</option>
                                <option value="Organizator">Організатор школи</option>
                            </select>
                            <span asp-validation-for="Input.UserType" class="text-danger"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn akame-btn active ">Register</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Register Form End -->
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
